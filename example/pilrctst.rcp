  LABEL "PilRC v2.5b5" AUTOID AT (0 PrevBottom+4) FONT 1
  LABEL "Copyright 1997-1999 Wes Cherry" AUTOID AT (0 PrevBottom) FONT 128
  LABEL "Copyright 2000      Aaron Ardiri" AUTOID AT (0 PrevBottom) FONT 128
END

MENU ID mainMenu
BEGIN
  PULLDOWN "Help"
